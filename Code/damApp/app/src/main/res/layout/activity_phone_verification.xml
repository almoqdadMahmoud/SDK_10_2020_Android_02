<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".LoginAndRegister.PhoneVerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

        <ImageView
            android:id="@+id/go_back_to_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/arrow_left"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enter_your_phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your Code"
            android:textSize="15sp"
            android:textColor="#4666A6"
            android:padding="10dp" />

        <com.goodiebag.pinview.Pinview
            android:id="@+id/pinview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:pinBackground="@drawable/pin_view_shape"
            app:pinWidth="50dp"
            app:pinHeight="40dp"
            app:pinLength="4"
            app:textSize="14sp"
            app:cursorVisible="true"
            app:forceKeyboard="true"
            app:inputType="text"
            app:password="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/resend_code_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend Code?"
                android:textColor="#4666A6"
                android:textStyle="bold"
                android:layout_alignParentStart="true"/>


            <TextView
                android:id="@+id/call_me_to_resend_code_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call me?"
                android:textColor="#4666A6"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:layout_marginBottom="40dp">

        <Button
            android:id="@+id/verify_phone_2_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:backgroundTint="#41A1BF"
            android:text="Continue"/>

    </LinearLayout>

</LinearLayout>